#!/usr/bin/env node

/**
 * Clear Vector Storage Script
 * 
 * Cleans out all stored vectors to start fresh
 */

const fs = require('fs');
const path = require('path');

async function clearStorage() {
    console.log('üßπ Clearing Agentic Memory Storage...');
    
    try {
        // Path to LanceDB storage
        const storagePath = './data/vectors';
        
        if (fs.existsSync(storagePath)) {
            console.log('üìÅ Found storage directory, removing...');
            fs.rmSync(storagePath, { recursive: true, force: true });
            console.log('‚úÖ Storage directory removed');
        } else {
            console.log('üìÅ Storage directory not found (already clean)');
        }
        
        // Also clear any backup files
        const backupFiles = [
            './feature-selection.json',
            './feature-selection-detailed.json'
        ];
        
        backupFiles.forEach(file => {
            if (fs.existsSync(file)) {
                fs.unlinkSync(file);
                console.log(`üóëÔ∏è  Removed ${file}`);
            }
        });
        
        console.log('');
        console.log('‚úÖ Storage cleared successfully!');
        console.log('');
        console.log('Next steps:');
        console.log('1. Restart storage-agent service');
        console.log('2. Run trading positions to collect new data');
        console.log('3. Monitor for low-variation issues');
        
    } catch (error) {
        console.error('‚ùå Failed to clear storage:', error.message);
        process.exit(1);
    }
}

clearStorage();